<div class="wcl-msry columns-{{maxColumns}} {{gridClasses}}" id="{{gridId}}">
  <div class="msry-sizer" id="{{gridId}}-sizer"></div>
  <div class="msry-gutter" id="{{gridId}}-gutter"></div>
    {{items}}
    <script type='text/javascript'>require(['wclib/js/wc-grid-msry-init'],
       function(grid){grid('{{gridId}}', {columnWidth: '#{{gridId}}-sizer', itemSelector: '.item', gutter: '#{{gridId}}-gutter', percentPosition: true, horizontalOrder: true});});
    </script>
</div>
